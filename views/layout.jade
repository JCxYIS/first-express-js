    block extra_css
  body
    block raw_content
    div(class="container")
      block content

    // print toasts
    div(aria-live='polite', aria-atomic='true', style='position: relative; min-height: 200px;')
      // position it
      div(style='position: absolute; top: 0; right: 0;')
        if toast
            .toast(role='alert', aria-live='assertive', aria-atomic='true')
              .toast-header
                //img.rounded.mr-2(src='...', alt='...')
                strong.mr-auto= toast.title
                button.ml-2.mb-1.close(type='button', data-dismiss='toast', aria-label='Close')
                  span(aria-hidden='true') Ã—
              .toast-body= toast.message
            script
              $('.toast').toast('show');

    script(src='https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.min.js')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.bundle.min.js')
